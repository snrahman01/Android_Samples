<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="itemViewModel"
            type="com.example.happyshoping.viewmodel.ItemsViewModel" />
    </data>
<androidx.recyclerview.widget.RecyclerView
